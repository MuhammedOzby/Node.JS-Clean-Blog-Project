<div class="row">
  <div class="col-lg-8 col-md-10 mx-auto">
    <% for (let i=0; i < posts.length; i++) { %>
    <div class="post-preview">
      <a href="/post/<%= posts[i]._id %>">
        <h2 class="post-title"><%= posts[i].title %></h2>
        <h3
          class="post-subtitle"
          style="
            display: -webkit-box;
            overflow: hidden;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
          "
        >
          <%= posts[i].detail %>
        </h3>
      </a>
      <p class="post-meta">
        <%= new Date(posts[i].dateCreated).toLocaleDateString("tr-TR") %>
      </p>
    </div>
    <% } %>
  </div>
</div>
